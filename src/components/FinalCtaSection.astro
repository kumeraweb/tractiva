---
import { MessageCircle, ArrowRight } from "@lucide/astro";
---

<section class="cta" id="contacto">
  <div class="cta__container">
    <div class="cta__content reveal">
      <h2 class="cta__title">
        <span class="line-reveal"><span>Conversemos sobre</span></span>
        <span class="line-reveal line-reveal-d1"
          ><span>tu próximo <em>cliente.</em></span></span
        >
      </h2>
      <p class="cta__subtitle">
        Sin compromiso. 15 minutos. Analizamos tu caso gratis.
      </p>
      <div class="cta__buttons">
        <a
          href="https://wa.me/56912345678"
          target="_blank"
          rel="noopener"
          class="btn-primary btn-primary--dark"
        >
          <MessageCircle size={18} />
          Hablar por WhatsApp
        </a>
        <a href="#" class="btn-secondary btn-secondary--dark">
          Agendar reunión
          <ArrowRight size={16} />
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .cta {
    background: var(--black);
    padding: var(--section-py) 0;
  }
  .cta__container {
    max-width: var(--max-w);
    margin: 0 auto;
    padding: 0 var(--section-px);
  }
  .cta__content {
    max-width: 40rem;
  }
  .cta__title {
    font-size: clamp(2.5rem, 5.5vw, 4.5rem);
    font-weight: 700;
    color: var(--white);
    line-height: 1.08;
    letter-spacing: -0.04em;
  }
  .cta__title em {
    font-style: normal;
    color: var(--accent-light);
  }
  .cta__subtitle {
    margin-top: 1.5rem;
    font-size: 1.125rem;
    color: var(--gray-400);
    line-height: 1.6;
  }
  .cta__buttons {
    margin-top: 2.5rem;
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }
</style>
