---
const projects = [
  {
    label: "Captura de campaña activa — Google Ads",
    caption: "Clínica dental · Santiago",
    ratio: "16 / 10",
  },
  {
    label: "Reporte mensual de rendimiento",
    caption: "Estudio legal · Las Condes",
    ratio: "4 / 3",
  },
  {
    label: "Estructura de cuenta optimizada",
    caption: "Empresa de climatización · RM",
    ratio: "4 / 3",
  },
];
---

<section class="work" id="trabajo">
  <div class="work__container">
    <div class="work__header reveal">
      <span class="section-label">Trabajo</span>
      <h2 class="work__title">
        <span class="line-reveal"><span>Así se ve nuestro</span></span>
        <span class="line-reveal line-reveal-d1"
          ><span><span class="keyword">trabajo.</span></span></span
        >
      </h2>
      <p class="work__subtitle">
        Capturas reales de campañas que gestionamos. Sin datos inventados, sin
        dashboards decorativos.
      </p>
    </div>

    <div class="work__grid">
      <div class="work__item work__item--large reveal">
        <div class="work__img" style={`aspect-ratio: ${projects[0].ratio}`}>
          <span class="work__img-label">{projects[0].label}</span>
        </div>
        <p class="work__caption">{projects[0].caption}</p>
      </div>
      <div class="work__col">
        {
          projects.slice(1).map((p, i) => (
            <div class={`work__item reveal reveal-delay-${i + 1}`}>
              <div class="work__img" style={`aspect-ratio: ${p.ratio}`}>
                <span class="work__img-label">{p.label}</span>
              </div>
              <p class="work__caption">{p.caption}</p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<style>
  .work {
    background: var(--white);
    padding: var(--section-py) 0;
  }
  .work__container {
    max-width: var(--max-w);
    margin: 0 auto;
    padding: 0 var(--section-px);
  }
  .work__header {
    margin-bottom: 3.5rem;
  }
  .work__title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    color: var(--black);
    line-height: 1.05;
  }
  .work__subtitle {
    margin-top: 1.25rem;
    font-size: 0.9375rem;
    line-height: 1.7;
    color: var(--gray-500);
    max-width: 32rem;
  }

  .work__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  @media (min-width: 768px) {
    .work__grid {
      grid-template-columns: 1.2fr 0.8fr;
    }
  }
  .work__col {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .work__img {
    background: var(--gray-100);
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }
  .work__item:hover .work__img {
    transform: scale(1.02);
  }
  .work__img-label {
    font-size: 0.6875rem;
    font-weight: 500;
    color: var(--gray-400);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    text-align: center;
    padding: 1rem;
  }

  .work__caption {
    margin-top: 0.75rem;
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--gray-500);
  }
</style>
